    <Border Background="#2A2F4F"
            CornerRadius="10">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width=".6*"/>
                    <ColumnDefinition Width=".2*"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="1"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0">
                <Grid Margin="0,0,10,0"
                      Width="60">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="45"
                            Command="{Binding VerUsuariosAdminCommand}"
                            Padding="0"
                            materialDesign:ButtonAssist.CornerRadius="3"
                            ToolTip="MaterialDesignRaisedButton with Round Corners"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                        <materialDesign:PackIcon Kind="AccountTie"
                                                 Width="40"
                                                 Height="40"
                                                 HorizontalAlignment="Center" />
                    </Button>
                </Grid>
                <Grid Margin="0,0,10,0"
                      Width="60">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="45"
                            Padding="0"
                            Command="{Binding VerUsuariosVIPCommand}"
                            materialDesign:ButtonAssist.CornerRadius="3"
                            ToolTip="MaterialDesignRaisedButton with Round Corners"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                        <materialDesign:PackIcon Kind="Crown"
                                                 Width="40"
                                                 Height="40"
                                                 HorizontalAlignment="Center" />
                    </Button>
                </Grid>
                <Grid Margin="0,0,10,0"
                      Width="60">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="45"
                            Padding="0"
                            Command="{Binding VerUsuariosNormalCommand}"
                            materialDesign:ButtonAssist.CornerRadius="3"
                            ToolTip="MaterialDesignRaisedButton with Round Corners"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                        <materialDesign:PackIcon Kind="Account"
                                                 Width="40"
                                                 Height="40"
                                                 HorizontalAlignment="Center" />
                    </Button>
                </Grid>
                    <Grid Width="60">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="45"
                                Command="{Binding VerAgregarUsuarioCommand}"
                                Padding="0"
                                materialDesign:ButtonAssist.CornerRadius="3"
                                ToolTip="MaterialDesignRaisedButton with Round Corners"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                            <materialDesign:PackIcon Kind="AccountPlus"
                                                     Width="40"
                                                     Height="40"
                                                     HorizontalAlignment="Center"
                                                     Foreground="White" />
                        </Button>
                    </Grid>
                </WrapPanel>
                <materialDesign:ColorZone Mode="Standard"
                                          Padding="8 4 8 4"
                                          Grid.Column="2"
                                          CornerRadius="2"
                                          Panel.ZIndex="1"
                                          Margin="16 10 10 0">
                    <Grid Width="190">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                HorizontalAlignment="Left"
                                Command="{Binding BuscarUsuarioCommand}"
                                CommandParameter="{Binding ElementName=txtBuscar, Path=Text}">
                            <materialDesign:PackIcon Kind="Search"
                                                     Width="auto"
                                                     Height="auto"
                                                     Opacity=".56" />
                        </Button>
                        <TextBox Grid.Column="1"
                                 Margin="8 0 0 0"
                                 materialDesign:HintAssist.Hint="Buscar usuario"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 BorderThickness="0"
                                 MinWidth="210"
                                 FontSize="14"
                                 Name="txtBuscar"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 VerticalAlignment="Center" />
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Grid.Column="2">
                            <materialDesign:PackIcon Kind="Microphone"
                                                     Opacity=".56"
                                                     Width="auto"
                                                     Height="auto"
                                                     Margin="8 0 0 0" />
                        </Button>
                    </Grid>
                </materialDesign:ColorZone>
            </Grid>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding ListaUsuarios}"
                              HorizontalContentAlignment="Center"
                              HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel></WrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="230"
                                    Width="255"
                                    CornerRadius="10"
                                    Margin="13,25,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background"
                                                Value="{StaticResource color3}"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="#917FB3"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel HorizontalAlignment="Center"
                                            Margin="0,20,0,0">
                                    <fa:ImageAwesome Icon="UserCircle"
                                                     Width="40"
                                                     Margin="10"
                                                     Foreground="White"></fa:ImageAwesome>
                                    <Border Background="#2A2F4F"
                                            Height="auto"
                                            Width="auto"
                                            CornerRadius="10"
                                            Padding="8">
                                        <StackPanel VerticalAlignment="Center"
                                                    Margin="0,0,0,5">
                                            <WrapPanel VerticalAlignment="Center"
                                                       HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="Pencil"
                                                                         Foreground="White"
                                                                         Height="15"
                                                                         Width="15"
                                                                         Margin="0,5,0,0"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Height="20"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,10,0,0"
                                                           FontSize="15"
                                                           VerticalAlignment="Center"
                                                           Foreground="white">:<Run Text=" "></Run><Run Text="{Binding Nombre}"></Run></TextBlock>
                                            </WrapPanel>
                                            <WrapPanel VerticalAlignment="Center"
                                                       HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="Email"
                                                                         Foreground="White"
                                                                         Height="15"
                                                                         Width="15"
                                                                         Margin="0,0,0,0"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Height="20"
                                                           HorizontalAlignment="Center"
                                                           FontSize="15"
                                                           VerticalAlignment="Center"
                                                           Foreground="white">:<Run Text=" "></Run><Run Text="{Binding CorreoElectronico}"></Run></TextBlock>
                                            </WrapPanel>
                                            <WrapPanel HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="CardAccountDetails"
                                                                         Foreground="White"
                                                                         Height="15"
                                                                         Width="15"
                                                                         Margin="0,0,0,0"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Text="   "></TextBlock>
                                                <TextBlock Text="{Binding IdRolNavigation.Nombre}"
                                                           HorizontalAlignment="Center"
                                                           FontSize="15"
                                                           VerticalAlignment="Center"
                                                           Foreground="white"></TextBlock>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Border>
                                    <WrapPanel HorizontalAlignment="Center"
                                               Margin="0,0,0,0">
                                        <Grid Width="50"
                                              Margin="0,0,10,0">
                                            <Button Command="{Binding Source={x:Reference user},Path=DataContext.VerBitacorasCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                    Height="50"
                                                    Margin="0,5,0,0"
                                                    materialDesign:ButtonAssist.CornerRadius="25"
                                                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
                                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                                <materialDesign:PackIcon Kind="Book"
                                                                         Height="25"
                                                                         Width="25"
                                                                         HorizontalAlignment="Center" />
                                            </Button>
                                        </Grid>
                                        <Grid Width="50"
                                              Margin="0,0,10,0">
                                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                    Height="50"
                                                    Command="{Binding Source={x:Reference user},Path=DataContext.VerEditarUsuarioCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Margin="0,5,0,0"
                                                    materialDesign:ButtonAssist.CornerRadius="25"
                                                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
                                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                                <materialDesign:PackIcon Kind="AccountEdit"
                                                                         Height="25"
                                                                         Width="25"
                                                                         HorizontalAlignment="Center" />
                                            </Button>
                                        </Grid>
                                        <Grid Width="50">
                                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                    Height="50"
                                                    Command="{Binding Source={x:Reference user},Path=DataContext.VerEliminarUsuarioCommand}"
                                                    CommandParameter="{Binding Id}"
                                                    Margin="0,5,0,0"
                                                    materialDesign:ButtonAssist.CornerRadius="25"
                                                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
                                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                                <materialDesign:PackIcon Kind="Delete"
                                                                         Height="25"
                                                                         Width="25"
                                                                         HorizontalAlignment="Center" />
                                            </Button>
                                        </Grid>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>