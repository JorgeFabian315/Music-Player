<UserControl x:Class="Music_Player.Views.CancionesViews.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Music_Player.Views.CancionesViews"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".6*" />
            <ColumnDefinition Width=".4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" />
            <RowDefinition Height=".4*" />
            <RowDefinition Height=".5*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Home"
                   Margin="10 0 0 0"
                   Foreground="{StaticResource color1}"
                   FontSize="40" />
        <WrapPanel Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            <fa:ImageAwesome Icon="BellOutline"
                             Foreground="{StaticResource color1}"
                             Height="30" />
            <Border Background="{StaticResource color4}"
                    Height="30"
                    Width="200"
                    CornerRadius="5"
                    Margin="30,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="13"
                                      ShadowDepth="2"
                                      Color="Black" />
                </Border.Effect>
                <WrapPanel>
                    <fa:ImageAwesome Icon="Search"
                                     Margin="7,5,5,5"
                                     Foreground="{StaticResource color2}" />
                    <TextBlock Text="Buscar"
                               Foreground="{StaticResource color2}"
                               VerticalAlignment="Center"
                               FontSize="15"
                               Margin="10,0,0,0" />
                </WrapPanel>
            </Border>
        </WrapPanel>
        <DockPanel Grid.Row="1"
                   Grid.RowSpan="2"
                   Grid.Column="1">
            <TextBlock Text="Top Artistas"
                       FontSize="30"
                       Margin="0 0 0 15"
                       DockPanel.Dock="Top" />
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding ListaArtistas}"></ItemsControl>
            </ScrollViewer>
        </DockPanel>
       
        <Border Background="Chocolate"
                Grid.Row="1" />
        <DockPanel Grid.Row="2">
            <TextBlock Text="Top Canciones" FontSize="30" Margin="0 0 0 15" DockPanel.Dock="Top"/>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding ListaCanciones}"
                ></ItemsControl>
        </ScrollViewer>
        </DockPanel>
        <Image Grid.Row="1"
               Visibility="Visible"
               Grid.Column="0"
               gif:ImageBehavior.AnimatedSource="/Assets/gif.gif" />
    </Grid>
</UserControl>
