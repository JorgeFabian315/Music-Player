<UserControl x:Class="Music_Player.Views.CancionesViews.VerCancionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Music_Player.Views.CancionesViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height=".9*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*" />
                <ColumnDefinition Width=".4*" />
                <ColumnDefinition Width=".3*" />
            </Grid.ColumnDefinitions>
            <Border CornerRadius="10"
                    Background="{StaticResource color1}" 
                    Grid.ColumnSpan="4"
                    Margin="0 0 0 10">
                <Border CornerRadius="10"
                        Height="35"
                        Background="{StaticResource color4}"
                        VerticalAlignment="Center"
                        Margin="10 0 30 0">
                    <WrapPanel VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Search"
                                                 Height="50"
                                                 Margin="10 0 0 0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource color2}" />
                        <TextBox Text="Buscar"
                                 Foreground="{StaticResource color2}"
                                 VerticalAlignment="Center"
                                 FontSize="15"
                                 Margin="10,0,0,0" />
                    </WrapPanel>
                </Border>
            </Border>
        </Grid>
        
        <ScrollViewer VerticalScrollBarVisibility="Visible" Style="{StaticResource MaterialDesignScrollViewer}" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding ListaCanciones}" 
                        HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5,10"
                                    Cursor="Hand"
                                    Width="200"
                                    Background="{StaticResource color1}">
                            <Grid Height="170"
                                    Width="200">
                                <Image Source="/Assets/musica.jpg" Stretch="Fill" />
                                <Border Background="{StaticResource color1}" Opacity=".5"/>
                            </Grid>
                                
                                <TextBlock Text="{Binding Titulo}"  Foreground="{StaticResource color4}"
                                           FontSize="17" Margin="10,5,0,5"
                                           TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding IdArtistaNavigation.Apodo}"
                                       Margin="10,0,0,10"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource color2}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
